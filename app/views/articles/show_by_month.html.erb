<h1>Articles published in <%= @month%></h1>

<div id="tab-monthly">
<table>
  <thead>
    <tr>
	  <th>Title</th>
      <th>Author</th>
	  <th>Publishing date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
		<td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.author.username if article.author != nil%></td>
		<td id="date">
			<%= article.created_at.strftime('%F') %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<span id="articles-notfound"><%= "No articles found" if @articles.count == 0 %></span>