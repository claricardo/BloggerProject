<h1>All Tags</h1>

<ul class="tags">
	<% @tags.sort{|t1,t2| t1.name <=> t2.name}.each do |tag| %>
		<li>
			<div id="tag">
				<%= link_to tag.name, tag_path(tag) %>
			</div>
			<% if logged_in? %>
				<%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the tag?"} %>
			<% end %>
		</li>
	<% end %>
</ul>

<% if @tags.count == 0 %>
<span id="tags-notfound"><%= "No tags found" %></span>
<% end %>




